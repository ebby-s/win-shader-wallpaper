#ifdef GL_ES
precision mediump float;
#endif

#extension GL_OES_standard_derivatives : enable

uniform float time;
uniform vec2 mouse;
uniform vec2 resolution;

struct Ray {
 vec3 origin;
 vec3 direction;
};

struct Sphere {
 float radius;
 vec3 position;
 vec3 color;
};

vec3 intersectSphere(Ray R, Sphere S) {
 vec3 op = R.origin - S.position;
 float b = dot(op, R.direction);
 float c = dot(op, op) - S.radius * S.radius;
 float D = b * b - c; // b^2-ac(a=1)
 if (D > 0.) {
  float t = - b - sqrt(D);// \u5c0f\u3055\u3044\u65b9\u306e\u89e3
  if (t > 0.) { // \u4e21\u65b9\u306e\u89e3(\u91cd\u89e3\u542b) > 0
   vec3 hitpoint = R.origin + R.direction * t;
   vec3 normal = normalize(hitpoint - S.position);
   float d = max(dot(normalize(vec3(1.)), normal), 0.1); //\u3053\u306e\u7a7a\u9593\u306f\u5b87\u5b99\u306e\u3088\u3046\u306b\u6697\u3044\u306e\u3067\u3053\u306e\u7403\u304c\u4f8b\u3048\u3070\u6708\u3060\u3063\u305f\u3089\u3053\u3093\u306a\u3053\u3068\u306f\u306a\u3044\u304c,\u3053\u306emax()\u304c\u306a\u3051\u308c\u3070\u7403\u5f62\u304c\u898b\u3048\u306a\u3044\u306e\u3067\u3064\u3051\u3066\u304a\u304f.\u7403\u5f62\u306b0.1\u306e\u5883\u76ee\u304c\u898b\u3048\u3046\u308b\u306e\u3067,\u3053\u3053\u3067\u306f\u4e0d\u81ea\u7136\u306b\u3082\u898b\u3048\u308b\u304c,\u5730\u4e0a\u3067\u540c\u3058\u3088\u3046\u306b\u5b9f\u9a13\u3059\u308b\u306a\u3089\u3070,\u5730\u8868\u304b\u3089\u306e\u53cd\u5c04\u5149(\u74b0\u5883\u5149)\u304c\u3042\u308b\u306e\u3067,\u307e\u3042\u3042\u308a\u3048\u306a\u3044\u3053\u3068\u3082\u306a\u3044\u304b\u3068.
   return S.color * d; //\u3053\u308c\u306f\u53f3\u4e0a\u624b\u524d=(x,y,z)=(1,1,1)\u307b\u3069\u660e\u308b\u304f,\u8868\u9762\u306f\u4e00\u69d8\u306b\u4e71\u53cd\u5c04\u3059\u308b\u60f3\u5b9a\u306b\u5bfe\u5fdc\u3059\u308b.\u6b63\u53cd\u5c04\u3092\u5168\u304f\u8003\u616e\u3057\u3066\u3044\u306a\u3044.
  }
 }
 return vec3(0.);
}

void main( void ) {
 vec2 position = ( gl_FragCoord.xy * 2. - resolution.xy) / min(resolution.x, resolution.y); // map (min(resolution.x, resolution.y)\u306a\u307b\u3046(x or y)) to (-1,1)

 Ray ray;
 ray.origin = vec3(0.);
 ray.direction = normalize(vec3(position,-1)); //  -1 \u306f\u3069\u308c\u3060\u3051\u5e83\u89d2\u304b\u3092\u8868\u3059,\u3053\u306e\u72b6\u614b\u3067\u306f\u3061\u3087\u3046\u3069\u4e0a\u4e0b,\u5de6\u53f3\u306bpi/4\u305a\u3064\u306e\u7bc4\u56f2\u304c\u898b\u3048\u308b.\u5b9f\u969b\u306e\u30ec\u30f3\u30ba\u306a\u3089\u3070\u5186\u5f62\u306a\u306e\u3067,\u898b\u3048\u308b\u7bc4\u56f2\u306f\u5186\u5f62\u306b\u534a\u5f84pi/4\u76f8\u5f53\u306e\u7bc4\u56f2\u304c\u898b\u3048\u308b\u306f\u305a\u3060(\u3053\u306e\u753b\u9762\u306e4\u9685\u304ccut\u3055\u308c\u308b)\u304c.

 Sphere sphere;
 sphere.radius = 1.;
 sphere.position = vec3((mouse * 2. + vec2(-1)) * 5.,-5.); // \u7269\u4f53\u3092\u30de\u30a6\u30b9\u3067\u52d5\u304b\u305b\u308b\u3088\u3046\u306b\u3057\u305f.\u6b63\u9762\u304b\u3089\u96e2\u308c\u308b\u307b\u3069,\u7403\u304c\u7403\u306e\u306f\u305a\u306a\u306e\u306b\u6b6a\u3080\u304c,\u3053\u308c\u306f\u30ab\u30e1\u30e9\u306e\u30bb\u30f3\u30b5\u30fc\u304c\u9577\u65b9\u5f62\u3092\u3057\u3066\u3044\u308b\u305f\u3081.\u7db2\u819c\u306e\u3088\u3046\u306b\u7403\u5f62\u3092\u3057\u3066\u3044\u308b\u306e\u3067\u3042\u308c\u3070\u6b6a\u307f\u306f\u751f\u3058\u306a\u3044.\u3053\u308c\u3092\u7406\u89e3\u3059\u308b\u306e\u306b\u5c0f1\u6642\u9593\u304b\u304b\u3063\u305f.(\u30ab\u30e1\u30e9\u306f\u3053\u306e\u6b6a\u307f\u3092\u88dc\u6b63\u3057\u3066\u3044\u308b\u3093\u3067\u3059\u306d...)
 sphere.color = vec3(1);
 
 vec3 destcolor = intersectSphere(ray, sphere);
 gl_FragColor = vec4(destcolor,1);
}

